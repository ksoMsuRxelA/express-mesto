{
    "extends": "airbnb-base",
    "rules": {
      "no-console": "off",
      "no-underscore-dangle": ["error", { "allow": ["_id"]}],
      "arrow-body-style": "off",
      "max-len": "off",
      "max-classes-per-file": "off"
    }
    // консоль нужна для разработки. max-len выключил потому что пишу длинные сообщения ошибок.
    // классы ошибок пока что расположил в одном файле, они пока еще "маленькие". Вот как вырастут
    // каждому классу создам свой файл.
}
